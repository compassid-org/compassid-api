# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Option 1: For LOCAL development (individual variables)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=compassid
DB_USER=postgres
DB_PASSWORD=your_password_here

# Option 2: For PRODUCTION deployment (single connection string)
# Railway, Render, Supabase, Neon provide this automatically
# Uncomment and use this instead of individual DB_ variables for production:
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=change_this_to_a_random_secret_key_in_production
JWT_EXPIRES_IN=7d

# External API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
PUBMED_API_KEY=
CROSSREF_EMAIL=contact@compassid.org
OPENALEX_EMAIL=contact@compassid.org

# CORS
CORS_ORIGIN=http://localhost:5173
