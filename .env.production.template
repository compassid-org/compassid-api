# COMPASSID API - Production Environment Template
# Copy this file to .env and fill in all values before deploying

# Server Configuration
PORT=3001
NODE_ENV=production

# Database - PostgreSQL (REQUIRED)
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=compassid_production
DB_USER=compassid_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# JWT Authentication (REQUIRED - Generate new secure secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRES_IN=7d

# Admin Credentials (REQUIRED - Change from defaults!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_ME_STRONG_ADMIN_PASSWORD

# API Keys (optional)
PUBMED_API_KEY=
CROSSREF_EMAIL=contact@yourdomain.com
OPENALEX_EMAIL=contact@yourdomain.com

# Claude AI API (Required for AI features)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# Stripe (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Price IDs (Create in Stripe Dashboard)
STRIPE_PRICE_RESEARCHER_MONTHLY=price_xxx
STRIPE_PRICE_RESEARCHER_YEARLY=price_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_GRANT_MONTHLY=price_xxx
STRIPE_PRICE_GRANT_YEARLY=price_xxx

# CORS & Frontend (REQUIRED)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com
