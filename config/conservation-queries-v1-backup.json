  "search_strategies": {
    "high_priority": {
      "description": "Most likely to yield conservation papers",
      "categories": ["frameworks", "conservation_general", "conservation_methods"]
    },
    "medium_priority": {
      "description": "Broader sustainability and climate-biodiversity intersection",
      "categories": ["climate_biodiversity", "sustainability"]
    },
    "ecosystem_specific": {
      "description": "Target specific ecosystem types",
      "categories": ["ecosystems"]
    },
    "geographic_specific": {
      "description": "Target conservation work in specific countries and regions",
      "categories": ["countries_regions"]
    },
    "author_specific": {
      "description": "Target specific researchers for use case showcases",
      "categories": ["authors"]
    }
  },

  "filters": {
    "date_range": {
      "from": "1990-01-01",
      "to": "2025-12-31",
      "rationale": "Capture foundational modern conservation work (35 years) including Rio Earth Summit era, early CBD, and classic papers while maintaining good abstract availability"
    },
    "content_requirements": {
      "must_have_abstract": true,
      "must_have_doi": true,
      "rationale": "Abstract required for AI metadata extraction"
    },
    "language": {
      "preferred": ["en"],
      "rationale": "English papers for consistent AI processing"
    }
  },

  "rate_limits": {
    "crossref_api": {
      "requests_per_second": 1,
      "notes": "CrossRef allows 50 req/sec, but we're being polite"
    },
    "claude_api": {
      "papers_per_batch": 2,
      "delay_seconds": 3,
      "notes": "Process 2 papers every 3 seconds to avoid rate limits"
    }
  },

  "quality_thresholds": {
    "ai_confidence_minimum": 0.5,
    "manual_review_threshold": 0.7,
    "notes": "Papers below 0.5 confidence should be flagged for manual review"
  }
}
